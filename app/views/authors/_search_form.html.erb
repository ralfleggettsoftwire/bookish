<%= form_with(scope: :author, method: :get) do |form| %>
  <div class="block">
    <h5 class="subtitle is-5">Search for authors</h5>
  </div>
  <div class="block">
    <div class="field">
      <%= form.label :name, 'Name:', class: 'label' %>
      <%= form.text_field :name, class: 'input' %>
    </div>
    <div class="field">
      <%= form.label :nationality, 'Nationality:', class: 'label' %>
      <%= form.text_field :nationality, class: 'input' %>
    </div>
    <%= form.submit 'Search', name: 'search', class: 'button' %>
  </div>
<% end %>